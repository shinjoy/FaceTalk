<script>
function bbsDelete(userId,talkId,Seq){
	
	if(confirm("삭제하시겠습니까?")){
		var param = {
				
				userId		: 	userId,
				talkId		: 	talkId,
				bbsSeq		: 	Seq,
			};
		
		$.ajax({
			type:"POST",
			url:"/m/bbs_delete_do.go",
			dataType:"json",
			data:param,
			success:function(json){
				if(json.result){
					document.location.reload();
				}
				
			}
		});
	}
}

function bbsGood(userId,bbsSeq){
	
	var param = {
			
			bbsSeq		: 	bbsSeq,
			bbsSeqComment	: 	-1,
			userId		: 	userId,
		};
	
	$.ajax({
		type:"POST",
		url:"/m/bbs_like.go",
		dataType:"json",
		data:param,
		success:function(json){
			if(json.result){
				document.location.reload();
			}
			
		}
	});
	
	
}




</script>

	
